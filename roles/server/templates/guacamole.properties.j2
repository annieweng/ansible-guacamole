# Hostname and port of Guacamole proxy
guacd-hostname: 127.0.0.1 
guacd-port:    {{ GUACD_PORT }}


# LDAP setting
#auth-provider: net.sourceforge.guacamole.net.auth.ldap.LDAPAuthenticationProvider
ldap-hostname: ldapserver
ldap-port: 389
#ldap-encryption-method: none
ldap-max-search-results: 500
ldap-user-base-dn: cn=users,cn=accounts,dc=ipa.dc=example,dc=io
ldap-search-bind-dn:  uid=rouser,cn=users,cn=accounts,dc=ipa.dc=example,dc=io
ldap-search-bind-password: {{ ldap-search-bind-password }} 
ldap-username-attribute: uid
#only allow user that are member of guac-users
ldap-user-search-filter: (|(memberOf=cn=guac-users,cn=groups,cn=accounts,dc=ipa.dc=example,dc=io))

# MySQL Properties
mysql-hostname: localhost
mysql-port: 3306
mysql-database: {{ database_name }}
mysql-username: {{ database_user }}
mysql-password: {{ database_passwd }}
#allow concurrent connection.
mysql-disallow-simultaneous-connections: false
mysql-disallow-duplicate-connections: false